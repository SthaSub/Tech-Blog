<div class="card">

  <div class="card-body">
    <form class="edit-form">
      {{!-- <h5 class="card-title">{{format_date post.createdAt}}</h5> --}}
      <h7 class="card-subtitle mb-2 text-muted">
                <div class="form-group">
                          <label for="title">Title:</label>
      <input class="input" name="title" type="text" value="{{post.title}}" />
                </div>

      </h7>
      <p class="card-text">
        <div class="form-group">
             <label for="description">Description:</label>
      <textarea id="editTextArea" name="description" rows="5">{{post.description}}</textarea></p>
     
        </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info">
          Update
        </button>
      </div>
    </form>

  </div>

</div>

<script src="/js/post.js"></script>