<div class="row">
    <div class="col-12">
        <h3>Post</h3>
        <div class="card">
            <div class="card-body">
                {{!-- <h5 class="card-title">{{postPlain.creatAt}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">by {{postPlain.user.name}}</h6>
                <h7 class="card-subtitle mb-2 text-muted">{{postPlain.title}}</h7> --}}
                <h5 class="card-title">
                    <div class="author-name">by {{postPlain.user.name}}

                    </div>{{postPlain.title}}<div id="post-date">{{format_date postPlain.createdAt}}</div>
                </h5>

                <p class="card-text">{{postPlain.description}}</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h6>Comments</h6>
        {{#each commentsPlain as |comment|}}
        <div class="card">
            <div class="card-body">
                {{!-- <h5 class="card-title">DATE</h5>
                <h6 class="card-subtitle mb-2 text-muted">by {{comment.user.name}}</h6> --}}
                <h5 class="card-title">
                    <div class="author-name">by {{comment.user.name}}</div>
                    <div id="post-date">{{format_date comment.createdAt}}</div>
                </h5>
                <p class="card-text">{{comment.comment}}</p>

                {{!-- <a href="/api/comments/{{post.id}}" class="card-link">Comment</a> --}}
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form class="comment-form">
                    <div class="form-group">
                        <textarea class="form-control" id="commentText" rows="6"
                            placeholder="Write your comment"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Comment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/post.js"></script>